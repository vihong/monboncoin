.no-product-online
  display flex
  justify-content center
  align-items center
  font-style italic
  position relative
  top 30px
  p
    width 70%
    font-size 1.5rem
    text-align center
    color darken(lightgrey, 50%)
    font-weight bold
    span
      position relative
      top 10px
      line-height 150%
      color darken(lightgrey, 30%)
