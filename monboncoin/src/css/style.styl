    border none
    text-overflow:ellipsis
    border-radius 5px


  input:last-of-type
    width 95%
    margin auto
    padding 5px


  button
    color #44bd32
    width 100%
    margin-top 5px
    border 0
    padding 0.5rem
    font-size 1.3rem
    text-transform none
    //border-top 1px solid lightgrey
  button:hover, button:after
    background #44bd32
    color #fff
  input::placeholder
    background white
    height 35px
    margin 2px
  


.product-edit
  button
    color #EA2027
  button:hover, button:after
    background #EA2027
  input::placeholder
