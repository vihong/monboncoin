body
  background-image url(https://images.pexels.com/photos/1303098/pexels-photo-1303098.jpeg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260)
  background-position center top -100px
  background-size cover
  background-attachment fixed


header.top
  text-align center
  h1
    font-size 14.4rem
    line-height 0.7 // this font has a wacky baseline
    display flex
    justify-content: center;
  h2
    font-weight: bold

.catch-of-the-day
  display flex
  //height 90vh
  max-width:1500px
  margin 0 auto
  margin-top 5vh
  perspective: 1000px;
  transform-style preserve-3d
  //background snow
  box-shadow 0 2px 6px 0 hsla(0, 0%, 0%, 0.2)
  & > *
    flex 1 4 auto
    padding 2rem
    //border 1rem double lighten(black,10%)
    border-top 5px solid transparent
    border-radius 5px
    padding 3rem 2rem
    margin 2rem 1rem
    position relative
    background white
    transition all 0.3s
    //box-shadow 0 5px 5px rgba(0,0,0,0.1)
    box-shadow 0 2px 6px 0 hsla(0, 0%, 0%, 0.2)
    overflow scroll
    &:first-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 50%
      transform translateX(50%) rotateY(6deg) translateX(-50%)
    &:nth-child(2)
      transform translateX(-50%) rotateY(-14deg) translateX(50%)
      border-left 0
      border-right 0
      min-width 300px
    &:last-child
      flex-shrink 1 // take 4x the extra room
      flex-basis 50%
      transform translateX(-50%) rotateY(10deg) translateX(50%) scale(1.08) translateX(24px)
  & > *:hover
    border-top 5px solid orange

// Folding Transforms
// Take off folding when not checked
input#fold:not(:checked) ~ #main
  .catch-of-the-day > *
      transform none

input#fold
  display none
  &:checked + label
    background white
    color black

ul
  list-style none
  margin 0
  padding 0

ul.order
  // Default state
  li
    padding 1.5rem 0
    display flex
    font-size 1.4rem
    justify-content space-between
    align-items center
    span 
      button
        border 0
        line-height 1
        padding 0 5px 0 0 
        position absolute
        right 3px
        color lighten(red, 40%)
      
    &.unavailable
      text-decoration line-through
      background lighten(red, 80%)
    .price
      font-size 1.2rem
    span.count
      position relative
      overflow hidden
      float left // only works if it's floated?!
      span
        display inline-block
        // transition all 0.5s
    &:hover
        button
          color red
          transform scale(1.3)
.total
